<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.deccandelight" name="Deccan Delight" version="0.3.5" provider-name="gujal">
    <requires>
        <import addon="xbmc.python" version="2.20.0"/>
        <import addon="script.module.urlresolver" version="1.0.0"/>
        <import addon="script.module.requests" version="2.4.3"/>
        <import addon="script.module.beautifulsoup4" version="4.3.0"/>
        <import addon="script.module.six" version="1.9.0"/>
        <import addon="script.module.html5lib" version="0.999.0"/>
        <import addon="script.module.t0mm0.common" version="1.1.0"/>
        <import addon="script.common.plugin.cache" version="2.5.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_gb">Entertainment from the Deccan region of India</summary>
        <description lang="en_gb">This addon provides access to entertainment in various Deccan languages such as Tamil, Telugu, Malayalam, Kannada, and Hindi</description>
        <disclaimer lang="en_gb">This addon does not host any content and is only a scraper of sites on the Internet that host content. It is not responsible for the accuracy, compliance, copyright, legality, decency, or any other aspect of the content of streamed to your device. If you have any legal issues please contact the appropriate media file owners or host sites</disclaimer>
        <platform>all</platform>
        <forum>https://forums.tvaddons.ag/addon-releases/49105-deccan-delight-indian-entertainment.html</forum>
        <website>https://github.com/Gujal00/GujalKodiWork</website>
    </extension>
</addon>

<addon id="repository.gujal" name="Gujal's Addon Repository" version="1.2" provider-name="Gujal">
	<extension point="xbmc.addon.repository" name="Gujal's Addon Repository">
	<dir>
		<info compressed="false">https://offshoregit.com/tvaresolvers/tva-common-repository/raw/master/addons.xml</info>
		<checksum>https://offshoregit.com/tvaresolvers/tva-common-repository/raw/master/addons.xml.md5</checksum>
		<datadir zip="true">https://offshoregit.com/tvaresolvers/tva-common-repository/raw/master/zips/</datadir>
	</dir>
        <info compressed="false">https://offshoregit.com/gujal/main/addons.xml</info>
        <checksum>https://offshoregit.com/gujal/main/addons.xml.md5</checksum>
        <datadir zip="true">https://offshoregit.com/gujal/main/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Addons for Kodi related to Entertainment from India</summary>
		<description>Deccan Delight Addon Repository</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
